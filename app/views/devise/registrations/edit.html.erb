<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>

  <div class="field">
    <%= f.label :given_name %><br />
    <%= f.text_field :given_name, autofocus: true, autocomplete: "given_name" %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana %><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :given_name_kana %><br />
    <%= f.text_field :given_name_kana, autofocus: true, autocomplete: "given_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>
  <div>
    <%= f.label :birth_year %><br />
    <%= raw sprintf(f.date_select(:birth_year, use_month_numbers: true, start_year: (Time.now.year - 20), end_year: (Time.now.year - 15), date_separator:'%s'),'年','月')+'日' %>
  </div>

  <div class="actions">
    <%= f.submit t('.update') %>
  </div>
<% end %>
