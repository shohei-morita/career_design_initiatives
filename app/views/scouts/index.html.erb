<%= render partial: 'partials/company_global_nav' if recruiter_signed_in? %>
<%= render partial: 'partials/global_nav' if student_signed_in? %>

<table>
  <% if student_signed_in? %>
  <thead>
    <tr>
      <th>企業名</th>
      <th>件名</th>
      <th>日時</th>
      <th></th>
      <th></th>
    </tr>
  <% elsif recruiter_signed_in? %>
    <tr>
      <th>宛先</th>
      <th>件名</th>
      <th>日時</th>
      <th></th>
      <th></th>
    </tr>
  <% end %>
  </thead>
  <tbody>
  <% if @scouts.present? %>
    <% @scouts.each do |scout| %>
    <tr>
      <% if student_signed_in? %>
        <td><%= scout.recruiter.company.name %></td>
        <td><%= scout.title %></td>
        <td><%= scout.message_time %></td>
      <% elsif recruiter_signed_in? %>
        <td><%= scout.student.nickname %>さん</td>
        <td><%= scout.title %></td>
        <td><%= scout.message_time %></td>
      <% end %>
      <td><%= link_to '確認', scout_scout_messages_path(scout.id) %></td>
      <td>未読:<%= recruiter_signed_in? ? scout.scout_messages.where(read_unread: false, student_id: scout.student.id).count : scout.scout_messages.where(read_unread: false, recruiter_id: scout.recruiter_id).count %>件</td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>
