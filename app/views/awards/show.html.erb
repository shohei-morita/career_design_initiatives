<%= render partial: 'partials/global_nav' %>

<div class="wrapper show-wrapper text-center container">
  <h3>表彰詳細</h3>
  <table class="table student-table">
    <tr>
      <th>表彰名</th>
      <td><%= @award.title %></td>
    </tr>
    <tr>
      <th>受賞年</th>
      <td><%= l(@award.year, format: :very_short) %></td>
    </tr>
    <tr>
      <th>概要</th>
      <td><%= @award.summary.nil? ? '概要の登録はありません' : simple_format(@award.summary) %></td>
    </tr>
  </table>
  <%= link_to '編集', edit_student_award_path(current_student.id, @award.id), class: "rounded-btn" %>
</div>
