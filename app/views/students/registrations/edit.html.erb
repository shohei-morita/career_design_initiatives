<%= render partial: 'partials/global_nav' if student_signed_in? %>

<h2>ユーザー情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :tel %><br />
    <%= f.text_field :tel, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :family_name %><br />
    <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
  </div>

  <div class="field">
    <%= f.label :given_name %><br />
    <%= f.text_field :given_name, autofocus: true, autocomplete: "given_name" %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana %><br />
    <%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :given_name_kana %><br />
    <%= f.text_field :given_name_kana, autofocus: true, autocomplete: "given_name_kana" %>
  </div>

  <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>

  <div>
    <%= f.label :birth_date %><br />
    <%= raw sprintf(f.date_select(:birth_date, use_month_numbers: true, start_year: (Time.now.year - 20), end_year: (Time.now.year - 15), date_separator:'%s'),'年','月')+'日' %>
  </div>

  <div>
    <%= f.label :gender %><br />
    <%= f.select :gender, Student.genders.keys, {prompt: "選択してください"} %>
  </div>

  <div>
    <%= f.label :Industry %><br />
    <%= f.collection_select(:condition_ids, Industry.all, :id, :name, { prompt: '選択してください' }, { multiple: true } ) %><br />
  </div>

  <div>
    <%= f.label :occupation %><br />
    <%= f.collection_select(:condition_ids, Occupation.all, :id, :name, { prompt: '選択してください' }, { multiple: true } ) %><br />
  </div>

  <div>
    <%= f.label :workplace %><br />
    <%= f.collection_select(:condition_ids, Workplace.all, :id, :name, { prompt: '選択してください' }, { multiple: true } ) %><br />
  </div>

  <div>
    <%= f.label :workstyle %><br />
    <%= f.collection_select(:condition_ids, Workstyle.all, :id, :name, { prompt: '選択してください' }, { multiple: true } ) %><br />
  </div>

  <div class="actions">
    <%= f.submit '更新' %>
  </div>
<% end %>
