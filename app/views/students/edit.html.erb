<h1>PROFILE</h1>
<p>編集</p>

<%= form_with(model: @student, local: true) do |f| %>
  <% if @student.errors.any? %>
    <h2><%= @student.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div>
    <%= f.label :'姓' %>
    <%= f.text_field :family_name %>
  </div>
  <div>
    <%= f.label :'名' %>
    <%= f.text_field :given_name %>
  </div>
  <div>
    <%= f.label :'カナ姓' %>
    <%= f.text_field :given_name_kana %>
  </div>
  <div>
    <%= f.label :'カナ名' %>
    <%= f.text_field :family_name_kana %>
  </div>
  <div>
    <%= f.label :'ニックネーム' %>
    <%= f.text_field :nickname %>
  </div>
  <div>
    <%= f.label :'電話番号' %>
    <%= f.text_field :tel %>
  </div>
  <div>
    <%= f.label :'email' %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :'性別' %><br />
    <%= f.select :gender, Student.which_genders.keys.to_a, {prompt: "選択してください"} %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :student_id, value: current_student.id %>
    <%= f.submit '登録' %>
  </div>
<% end %>
