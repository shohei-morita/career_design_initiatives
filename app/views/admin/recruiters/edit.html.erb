<div class="wrapper">
<% if @recruiter.errors.any? %>
  <div>
    <h2><%= pluralize(@recruiter.errors.count, "error") %> prohibited this <%= @recruiter.name %> form being saved:</h2>
    <ul>
    <% @recruiter.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [ :admin, @recruiter], local: true) do |f| %>
  <div class="form-group">
    <%= f.label :family_name %>
    <%= f.text_field :family_name, class: "form-control", id: "new-recruiter-name"  %>
  </div>
  <div class="form-group">
    <%= f.label :given_name %>
    <%= f.text_field :given_name, class: "form-control", id: "new-recruiter-name"  %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control" , id: "new-recruiter-email" %>
  </div>
  <% if @recruiter.approved == false %>
  <div class="form-group">
    <p>承認状況<%= @recruiter.approved %><p>
    <%= f.submit "承認", name: "approved",  Class: "btn btn-info"%>
  </div>
  <% end %>
  <div class="form-group">
    <%= f.submit "更新", class: "btn btn-primary", id: "new-recruiter-create" %>
    <%= f.submit "Back", name: "back",  Class: "btn btn-info"%>
  </div>
<% end %>
</div>
