<%= render partial: 'partials/global_nav' %>

<div class="container wrapper student-wrapper">

<h3>登録課外活動一覧</h3>

<%= link_to '活動登録', new_student_extracurricular_activity_path, class: "rounded-btn" %>


<table class="table student-table-horizon">
  <tr>
    <th>活動期間</th>
    <th>課外活動名</th>
    <th colspan="3"></th>
  </tr>
  <% @extracurricular_activities.each do |extracurricular_activity| %>
  <tr>
    <td>
    <%= l(extracurricular_activity.beginning_year, format: :very_short)%>〜
    <% if extracurricular_activity.ending_year.nil? %>
      現在
    <% else %>
      <%= l(extracurricular_activity.ending_year, format: :very_short) %>
    <% end %>
    </td>
    <td><%= extracurricular_activity.name %></td>
    <td><%= link_to '詳細', student_extracurricular_activity_path(current_student.id, extracurricular_activity.id), class: "rounded-btn-sm" %></td>
    <td><%= link_to '編集', edit_student_extracurricular_activity_path(current_student.id, extracurricular_activity.id),  class: "rounded-btn-sm"  %></td>
    <td><%= link_to '削除', student_extracurricular_activity_path(current_student.id, extracurricular_activity.id), method: :delete, data: { confirm: '本当に削除しますか？' },  class: "rounded-btn-sm" %></td>
  </tr>
  <% end %>
</table>
</div>
