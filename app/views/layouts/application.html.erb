<!DOCTYPE html>
<html>
  <head>
    <title>CareerDesignInitiatives</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navigation">
      <% if student_signed_in? %>
        <li><%= link_to "ログアウト", destroy_student_session_path, method: :delete, class: "log_out" %></li>
      <% else %>
        <li><%= link_to "ログイン", new_student_session_path, class: "log_in" %></li>
        <li><%= link_to "新規登録", new_student_registration_path, class: "sign_in" %></li>
      <% end %>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
